    <!-- error日志 -->
    <springProfile name="prd">
    <appender name="prd-order-error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 过滤日志 -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>
                %msg%n
            </pattern>
        </encoder>
        <!-- 滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 设置error日志路径 -->
            <fileNamePattern>/logs/order-error.%d.log</fileNamePattern>
        </rollingPolicy>
    </appender>
    </springProfile>
    <!--不同环境下的日志输出位置-->
    <springProfile name="dev">
        <root level="debug">
            <appender-ref ref="logstash" />
            <appender-ref ref="console-dev"/>
        </root>
    </springProfile>
    <springProfile name="test">
        <root level="debug">
            <appender-ref ref="logstash" />
            <appender-ref ref="console-test"/>
        </root>
    </springProfile>

    <springProfile name="prd">
        <root level="debug">
            <appender-ref ref="console-dev"/>
            <appender-ref ref="logstash" />
            <appender-ref ref="prd-order-info"/>
            <appender-ref ref="prd-order-error"/>
           <!-- <appender-ref ref="prd-order-debug"/>-->
        </root>
    </springProfile>
